<?xml version="1.0" encoding="utf-8"?>
<resources>

  	<style name="NewAppTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
    	<item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>
  	</style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_titleTextColor">#33B5E5</item>
        <item name="sv_detailTextColor">#000000</item>
        <item name="sv_backgroundColor">#ddFFFFFF</item>
        <item name="sv_buttonText">@string/next_text</item>
    </style>

</resources>
